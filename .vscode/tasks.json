{
  "tasks": [
    {
      "type": "cppbuild",
      "label": "C/C++: g++ compilar archivo activo",
      "command": "/usr/bin/g++",
      "args": [
        "-fdiagnostics-color=always",
        "-g",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}",
        "-I${workspaceFolder}/include/**"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": ["$gcc"],
      "group": "build",
      "detail": "Tarea generada por el depurador."
    }
  ],
  "version": "2.0.0"
}
